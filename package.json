{
	"name": "echomock",
	"version": "0.1.0",
	"description": "A lightweight and flexible API mocking tool that focuses on accurate response handling",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"bin": {
		"echomock": "./dist/bin/start.js"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsc",
		"check": "biome check",
		"dev": "tsx watch bin/start.ts",
		"fix": "biome check --write",
		"start": "node dist/bin/start.js",
		"prepublishOnly": "npm run build",
		"version": "git add -A",
		"postversion": "git push && git push --tags"
	},
	"dependencies": {
		"@hono/node-server": "1.14.2",
		"hono": "4.7.10"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "22.15.21",
		"tsx": "4.19.4",
		"typescript": "5.8.3"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sya-ri/echomock.git"
	},
	"keywords": [
		"mock",
		"api",
		"testing",
		"development",
		"echo",
		"server"
	],
	"author": "sya-ri",
	"bugs": {
		"url": "https://github.com/sya-ri/echomock/issues"
	},
	"homepage": "https://github.com/sya-ri/echomock#readme"
}
